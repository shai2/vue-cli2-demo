/* ------基础部分------ */
html,body{background:#f3f5f7;line-height:1.4;}
view,text,button,input,textarea,image{box-sizing:border-box;padding:0;}
textarea{background:#fff;width:100%;padding:15px;font-size:14px;min-height:200px;}
span{font-size:14px;}
img{width:100%;height:auto;}
.flex{flex: 1 1;}
.align-top{align-items:flex-start!important;}
.align-bottom{align-items:flex-end!important;}
.align-stretch{align-items:stretch!important;}
.flex-wrap{flex-wrap:wrap}
.flex-row-center{display:flex;flex-direction:row;justify-content:center;align-items:center;}
.flex-row-between{display:flex;flex-direction:row;justify-content:space-between;align-items:center;}
.flex-row-around{display:flex;flex-direction:row;justify-content:space-around;align-items:center;}
.flex-column-center{display:flex;flex-direction:column;justify-content:center;align-items:center;}
.flex-column-between{display:flex;flex-direction:column;justify-content:space-between;align-items:center;}
.flex-column-around{display:flex;flex-direction:column;justify-content:space-around;align-items:center;}
.full{width:100%;height:100%;overflow:auto;}
.w0{width:0;}
.w100{width:100%!important;}
.h100{height:100%;}
.mgtop0{margin-top:0!important;}
.mgtop5{margin-top:5px!important;}
.mgtop10{margin-top:10px!important;}
.mgtop20{margin-top:20px!important;}
.mgtop30{margin-top:30px!important;}
.mgtop40{margin-top:40px!important;}
.mgtop50{margin-top:50px!important;}
.mgtop60{margin-top:60px!important;}
.mgtop70{margin-top:70px!important;}
.mgbt0{margin-bottom:0px!important;}
.mgbt5{margin-bottom:5px!important;}
.mgbt10{margin-bottom:10px!important;}
.mgrt10{margin-right:10px!important;}
.mglt10{margin-left:10px!important;}
.pdbt0{padding-bottom:0px!important;}
.pd15{padding:15px;}
.ellipsis{white-space:nowrap;overflow:hidden;text-overflow:ellipsis;}
.dis-none{display:none;}
.block{display:block;width:100%;height:100%;}
.inline{display:inline;}
.inline-block{display:inline-block;}
.pos-rel{position:relative;}
.overflow-s{overflow:auto;}
.overflow-h{overflow:hidden;}
.nowrap{white-space:nowrap;}
.pointer{cursor:pointer;}
.textalign-l{text-align:left;}
.textalign-r{text-align:right;}
.bor0{border-width:0;}
.icon{width:10px;height:10px;}
.p10{font-size:10px!important;}
.p12{font-size:12px!important;}
.p14{font-size:14px!important;}
.p15{font-size:15px!important;}
.fix-top{position:fixed;top:0;left:0;right:0;}
.fix-bottom{position:fixed;bottom:0;left:0;right:0;}
.red{color:#ec5151!important;}
.orange{color:#ff824b!important;}
.green{color:#67c23a!important;}
.blue{color:#29a1f7!important;}
.bg-gray{background-color:#f3f5f7;}
.bg-fff{background-color:#fff;}
// ::-webkit-scrollbar{width:0;height: 0;color:transparent;}
button[plain]{border-width: 0;}
input::-webkit-input-placeholder {color:#cbd4db;font-size:12px;}
*[contenteditable="true"]:empty:before{content:attr(placeholder);color:#cbd4db;font-size:12px;}
*:focus {outline: -webkit-focus-ring-color auto 0px!important;}
/*------样式部分------ */
.normal-border{border:1px solid #eee;padding:15px 20px;background:#fff;}
.border-top{border-top:1px solid #e4e9f0;}
.border-bottom{border-bottom:1px solid #e4e9f0;}
.placeholder{color:#cbd4db;}
.select-label{line-height:36px;margin-right:5px;}
.border-green{border-color:#67c23a!important;}
.w200{width:200px!important;}
.loading-blank{min-height:200px;margin-bottom:10px;}
/* ----覆盖elementUI---- */
.el-date-editor{margin-bottom:10px;}
.el-table--medium td{padding:5px 0;}
.el-date-editor.el-input{width:190px;}
.el-tabs{height:100%;display:flex;flex-direction:column;}
.el-tabs__content{overflow:auto;}
.event-item{background-color:#ccc!important;color:#fff!important;text-align:center;padding:0!important;pointer-events:none;}
.filter-item.el-input,.el-select.filter-item{width:120px;}
.events-day .event-box{max-height:58px;overflow:hidden;}
.work{background-color:#409EFF!important;}
.rest{background-color:#67c23a!important;}
.events-day .event-box .event-item:nth-child(2){background-color:#ff6567!important;}
.events-day .event-box .event-item:nth-child(3){background-color:#9689ee!important;}
.el-button.is-plain.focus {color: #fff;background:#409EFF;border-color: #409EFF;}
